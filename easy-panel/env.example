# Easy Panel API Configuration

# API URL (обязательно HTTPS в продакшене)
REACT_APP_API_URL=https://api.easypanel.com

# Секретный ключ для подписи запросов (HMAC)
REACT_APP_API_SECRET=your_super_secret_key_here

# Режим разработки
REACT_APP_DEV_MODE=true

# Логирование API запросов
REACT_APP_LOG_API_REQUESTS=true

# Автоматическое обновление токенов
REACT_APP_AUTO_REFRESH_TOKENS=true

# Таймаут запросов (в миллисекундах)
REACT_APP_REQUEST_TIMEOUT=30000

# Максимальное количество попыток повторного запроса
REACT_APP_MAX_RETRIES=3 